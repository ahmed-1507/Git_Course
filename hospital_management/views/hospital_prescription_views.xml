<odoo>
    <data>
        <record id="hospital_prescription_view_form" model="ir.ui.view">
            <field name="name">hospital.prescription.view.form</field>
            <field name="model">hospital.prescription</field>
            <field name="arch" type="xml">
                <form>
                    <header>
                        <button name="magic_command" type="object" string="magic command"/>
                    </header>
                    <sheet>

                        <div class="oe_title">
                            <h1>
                                <field name="name" placeholder="Title" />
                            </h1>
                        </div>
                        <group>
                            <field name="doctor_id" force_save="1"/>
                            <field name="patient_id" force_save="1"/>
                            <field name="appointment_id"/>
                            <field name="date"/>
                        </group>
                        <group>
                            <field name="medicine_color_ids" widget="many2many_tags" options="{'color_field': 'color_1'}"/>
<!--                                    color_1 => color in model 'hospital.medicine'-->
                        </group>
                        <notebook>
                            <page name="prescription" string="prescription">
                                <field name="prescription_line_ids">
                                    <tree editable="bottom">
                                        <field name="lines_count" readonly="1"/>
                                        <field name="medicine_id"/>
                                        <field name="stock_qty"/>
                                        <field name="qty"/>
                                        <field name="currency_id" column_invisible="True"/>
                                        <field name="price_unit" widget='monetary'/>
                                        <field name="price_subtotal"/>
                                    </tree>
                                </field>
                                <group class="oe_subtotal_footer" colspan="2" name="expense_total">
                                    <div class="oe_inline o_td_label">
                                        <label for="total_amount"/>
                                    </div>
                                    <field name="total_amount" nolabel="1" />

<!--                                    <field name="total_tax_amount" nolabel="1"/>-->
<!--                                    <div class="oe_inline o_td_label">-->
<!--                                        <label for="total_amount"/>-->
<!--                                    </div>-->
<!--                                    <field name="total_amount" nolabel="1" class="oe_subtotal_footer_separator"/>-->
<!--                                    <field name="amount_residual"-->
<!--                                           class="oe_subtotal_footer_separator"-->
<!--                                           invisible="state not in ('post', 'done')"/>-->
                                </group>

                            </page>
                        </notebook>
                    </sheet>
                </form>
            </field>
        </record>


        <record id="hospital_prescription_view_tree" model="ir.ui.view">
            <field name="name">hospital.prescription.view.tree</field>
            <field name="model">hospital.prescription</field>
            <field name="arch" type="xml">
                <tree sample="1">
                    <!--    عشان لو ال tree فاضيه يظهر حاجات معملها plur ف الخلفيه   sample="1"-->
                    <field name="name"/>
                    <field name="appointment_id"/>
                    <field name="doctor_id" force_save="1"/>
                    <field name="patient_id" force_save="1"/>
                </tree>
            </field>
        </record>


        <record id="hospital_prescription_view_action" model="ir.actions.act_window">
            <field name="name">hospital prescription action</field>
            <field name="res_model">hospital.prescription</field>
            <field name="view_mode">tree,form</field>
            <field name="help" type="html">
                <p class="o_view_nocontent_smiling_face">
                    Create The First Prescription
                </p>
            </field>
        </record>
    </data>
</odoo>