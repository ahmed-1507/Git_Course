<odoo>
    <data>

        <record id="hospital_medicine_view_form" model="ir.ui.view">
            <field name="name">hospital.medicine.view.form</field>
            <field name="model">hospital.medicine</field>
            <field name="arch" type="xml">
                <form>
                    <sheet>
                        <group>
                            <group>
                                <field name="name"/>
                                <field name="description"/>
                            </group>
                            <group>
                                <field name="stock_qty"/>
                                <field name="price" widget='monetary'/>
                                <field name="currency_id" invisible="1"/>
                            </group>
                            <group>
                                <field name="reference" placeholder="e.g"/>
                                <field name="color_1" widget="color_picker"/>
                                <field name="color_2" widget="color"/>
                            </group>
                            <group>

<!--                                    <field name="total_amount" nolabel="1" />-->

                                <field name="production_date"/>
                                <field name="available_duration"/>
                                <field name="expiration_date" readonly="1"/>
                            </group>
                        </group>
                    </sheet>
                </form>
            </field>
        </record>

        <record id="hospital_medicine_view_tree" model="ir.ui.view">
            <field name="name">hospital.medicine.view.tree</field>
            <field name="model">hospital.medicine</field>
            <field name="arch" type="xml">
                <tree>
                    <field name="name"/>
                    <field name="stock_qty"/>
                    <field name="color_1" widget="color_picker"/>
                </tree>
            </field>


        </record>
        <record id="hospital_medicine_view_action" model="ir.actions.act_window">
            <field name="name">hospital medicine action</field>
            <field name="res_model">hospital.medicine</field>
            <field name="view_mode">tree,form</field>
            <field name="context">{}</field>
            <field name="domain">[]</field>
            <field name="help" type="html">
                <p class="o_view_nocontent_smiling_face">
                    Create a new medicine Record, the first step of a new medicine!
                </p>
            </field>
        </record>

    </data>
</odoo>
