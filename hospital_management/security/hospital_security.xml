<odoo>
    <data>



          <!--        How to add group as combobox layout -->
        <!--        بمعني ازاي تخلي الجروبات عاملهdropdown list وانت تختار منهم جروب واحد-->
        <!--        مع العلم ان الجروبات هتتقسم من الاضعف للاقوي وكل جروب هياخد صلاحيته + صلاحية الجروب اللي قبله ف القايمه-->

        <record id="hospital_management_main_category" model="ir.module.category">
            <field name="name">Hospital Management</field>
        </record>

        <record id="hospital_management_sub_category" model="ir.module.category">
        <field name="name">Hospital Management</field>
        <field name="parent_id" ref="hospital_management.hospital_management_main_category"/>
        </record>



        <record id="hospital_users_group" model="res.groups">
            <field name="name">Hospital Users</field>
            <field name="category_id" ref="hospital_management.hospital_management_sub_category"/>
        </record>

        <record id="hospital_employees_group" model="res.groups">
            <field name="name">Hospital Employees</field>
            <field name="category_id" ref="hospital_management.hospital_management_sub_category"/>
            <field name="implied_ids" eval="[(6,0, [ref('hospital_management.hospital_users_group')])]"/>
        </record>

        <record id="hospital_manager_group" model="res.groups">
            <field name="name">Hospital Manager</field>
            <field name="category_id" ref="hospital_management.hospital_management_sub_category"/>
<!--            ref => لنفس الريكورد integer id in data base وهو هيحوله لل xmlبتاع ريكورد في ال id معناها اني هديله ال-->
            <field name="implied_ids" eval="[(4, ref('hospital_employees_group'))]"/>
            <!--صلاحيات المدير هتاخد معاها صلاحيات الموظف -->
        </record>



         <!--        How to override/reuse security group category-->
        <!--        هنفترض اننا عايزين نضيف جروب تحت ال Technical Category-->
        <!--        odoo => addons => base => data => ir_module_category_data-->
        <!--        ونعمل سيرش باسم الكاتيجري وناخد ال id بتاعه-->
        <record id="delete_employee_group" model="res.groups">
            <field name="name">Delete Employee</field>
            <field name="category_id" ref="base.module_category_hidden"/>    <!-- field many2one-->
        </record>



        <record id="can_delete_employee_rule" model="ir.rule">
            <!-- الموديل ثابت ومعناه ان فيه جروب معين هخليه يشوف فيلدات معينه -->
            <field name="name">can delete employee</field>
            <field name="model_id" ref="model_hospital_doctor"/>
            <field name="groups" eval="[(4 ,ref('delete_employee_group'))]"/>
            <!-- Many2Many relation -->
            <field name="domain_force">[(1 , '=' ,1)]</field>
<!--            <field name="domain_force">[('create_uid' , '=' ,user.id)]</field>-->
<!--            user ==>وقيمته اليوزر اللي فاتح حاليا ir.rule متغير موجود في تيبل ال-->
            <field name="perm_read" eval="False"/>
            <field name="perm_write" eval="False"/>
            <field name="perm_create" eval="False"/>
            <field name="perm_unlink" eval="True"/>
        </record>


    </data>
</odoo>


